<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Items"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textAlignment="center"
        android:padding="10dp"
        />
    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/background"
        >
    <TextView
        android:id="@+id/txtname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Garbar Burgers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"
        android:textColor="#000000"/>
        <TextView
            android:id="@+id/ratingdisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname1"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="4.5/5"/>
        <RatingBar
            android:id="@+id/ratingfeedback1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingdisplay1"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="4.5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:theme="@style/Widget.AppCompat.RatingBar"
            android:progressTint="#FFEB3B"
            android:clickable="true"
            />
        <EditText
            android:id="@+id/etfeedback1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingfeedback1"
            android:textSize="20sp"
            android:minLines="3"
            android:maxLines="10"
            android:layout_marginTop="5dp"
            android:hint="Add Your Review"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/background"
        >
        <TextView
            android:id="@+id/txtname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dominoe's bread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="22sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/ratingdisplay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname2"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="4.5/5"/>
        <RatingBar
            android:id="@+id/ratingfeedback2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingdisplay2"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="4.5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:theme="@style/Widget.AppCompat.RatingBar"
            android:progressTint="#FFEB3B"
            android:clickable="true"
            />
        <EditText
            android:id="@+id/etfeedback2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingfeedback2"
            android:textSize="20sp"
            android:minLines="3"
            android:maxLines="10"
            android:layout_marginTop="5dp"
            android:hint="Write Your FeedBack"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>

</LinearLayout>